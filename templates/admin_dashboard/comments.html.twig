{% extends 'admin_dashboard/templateAdmin.html.twig' %}

{% block title %}Hello ArticleController!
{% endblock %}

{% block content %}

	<h1>Commentaires</h1>
	{# <a class="btn btn-primary active" href="{{ path('/approuve-comment/{id}') }}">Approuver<span class="sr-only">(current)</span> #}
</a>
<ul>
	{% for comment in comments %}
		<li>
			<div class="article-commentaire">
				<div class="comments_user-info">
					<div>
						{{comment.user.firstName}}
					</div>
					<div>
						{{comment.user.lastName}}
					</div>
					<div>
						{{comment.user.email}}
					</div>
				</div>
				<div class="comments-info">
					<div>
						<div>
							{{comment.article.title}}, {{comment.creationDate|date}}
						</div>
					</div>
					<div>
						{{comment.content}}
					</div>
				</div>
			</div>
		</li>
	{% endfor %}
</ul>{% endblock %}
